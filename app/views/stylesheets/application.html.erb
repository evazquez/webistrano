/* GENERAL */

body {
	background-color: #CACACA;
	font-family: "Trebuchet MS", Verdana, serif;
	line-height: 16px;
}

ul {
	margin: 0px;
}

p {
	margin: 0px 0px;
	padding: 0px 0px 7px 0px;
}

form p {
	margin: 0px 0px;
	padding: 0px 0px 15px 0px;
}

a {
	color: #A40008;
	font-weight: bold;
	text-decoration: none
}
a:hover {
	color: #A40008;
	font-weight: bold;
	text-decoration: underline
}

select, input, textarea {
	border: 1px solid #AAAAAA;
	padding: 2px;
	margin-top: 2px;
	font-family: "Trebuchet MS", Verdana, serif;
	font-size: 12px;
}

